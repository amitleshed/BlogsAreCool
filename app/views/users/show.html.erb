<br><br>
<%= image_tag(@user.image, id: "img-big") %>
<h1 id="list-title"><%=@user.username%>'s Blog</h1>

<br><br>


          
            

<% @user.articles.each do |article| %>
    <div class="card" style="width: 50%; margin-right: auto; margin-left: auto">
        <div class="card-content">
          <h2 class="header"><%=  article.title %></h2>
          <p><%=  article.description %></p>
        </div>
        <p id="border"/>
<!-- Comments icon -->
<i class="fa fa-comments fa-3x" aria-hidden="true" style="opacity:0.3; margin-right: auto; margin-left: auto;"></i>
      <!-- Comments -->
      <div id="comments">
              <% article.comments.each do |comment| %>

              <p id="comment-username">
               <%= link_to comment.user.username, profiles_path(comment.user_id), id:"comment-user-link" %>
              </p>
              <p id="comment-created-at">
                <%= comment.created_at.strftime("%d %b %Y") %>
              </p>
              <p id="comment-content">
                <%= comment.description %>
               </p>

            <!-- Deleting comment -->
            <% if user_signed_in?%>
                  <% if comment.user_id == current_user.id%>
                      <%= link_to '', [article, comment], remote:true, method: :delete, data: { confirm: 'Are you sure?' }, id:"delete-comment", class: "glyphicon glyphicon-trash" %> 
                  <% end %>
            <% end %>


                <br>
                <p id="border"/>
              <% end %>
      </div>

<% if user_signed_in? %> <!-- Comment form -->
  <div style="margin-left: auto; margin-right: auto; width:50%;">
      <%= form_for [article, @comment] do |f| %> 
      <br>
             <%= f.text_field :description%>   
      <% end %>
     </div>
<% end %>

<% if article.comments.count == 0 %> <!-- If there are no comments - show message -->
  <p style="opacity:0.3;">No comments yet.</p>
<% end %>

    </div>
    <div class="mdl-card__menu" id="article-<%= article.id %>">

      <% if user_signed_in? %> <!-- Deleting an article -->
        <% if current_user.id == article.user_id %>
          <%= link_to '',  article,class: "glyphicon glyphicon-trash",id:"glyphicons", method: :delete, data: { confirm: 'Are you sure?' } %>
          <br>
        <% end %>
        <!-- Vote button -->
        <%= link_to '', users_vote_path(article_id: article.id), remote: true, class: "glyphicon glyphicon-chevron-up", id:"glyphicons", method: :post %>
      <% end %>
      <!-- Votes counter -->
      <span id="votes-article-<%=article.id%>"><%= article.votes.count %></span>
      
      <script type="text/javascript">
        // $.get('/profiles/5.json', function(data) {
        //   console.log(data.article_id);
        // })
      </script>
        </div>
  </div>
  </div>
  </div>
   <br><br>
    <% end %>
