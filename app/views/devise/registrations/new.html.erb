<br>
<h2>Sign up</h2>
<br><br>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
  <%= devise_error_messages! %>
<div id="forms">
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true,id:"fields" %>
  </div>

    <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true,id:"fields" %>
  </div>

  <div class="field">
    <%= f.label "Describe yourself via tags!"%><br />
    <%= f.text_field :about, placeholder: "ex: #sports #rocknroll #food", id:"fields"%>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off",id:"fields" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off",id:"fields" %>
  </div>

  <div class="field">
    <%= f.label :image %><br />
    <%= f.file_field :avatar, :id => "fields" %>
  </div>

  <div class="actions">
  <br>
    <%= f.submit "Sign up", class: "waves-effect waves-light btn" %>
  </div>
<% end %>
<br>
<%= render "devise/shared/links" %>
</div>